<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
    <%= link_to 'Edit this post', edit_post_path(@post),
    class: "mt-2 rounded-lg py-3 1px-5 bg-gray-100 inline-block font-medium" %>
    |
    <%= link_to 'Back to posts', posts_path,
    class: "ml-2 rounded-lg py-3 1px-5 bg-gray-100 inline-block font-medium" %>
    <div class="1container">
      <br />
      <h3><%= @post.title %></h3>
      <h5><%= @post.publish %></h5>
      <div id="navbar" class="1collapse">
        <ul class="nav navbar-nav">
          <li class="">
            <p style="width:310px; heigh:310px">
            <% if @post.image.attached? %>
              <%= link_to image_tag(@post.image,
              style:"width:300px; heigh:auto"), @post.image %>
            <% end %>
            </p>
          </li>
          <li><hr /></li>
          <li class="">
            <p style="width:400px; heigh:200px">
              <%= @post.body %>
            </p>
          </li>
          <li><hr /></li>
        </ul>
      </div>
    </div>

    <%= link_to 'Edit this post', edit_post_path(@post), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this post', post_path(@post), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to 'Back to posts', posts_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
  <br />
</div>
