<div class="container">
  <h1>Pins</h1>
  <div class="container" style="padding:10px 20px 25px 0">
    <%= link_to "New pin", new_pin_path %>
  </div>
  <table>
    <thead>
      <tr>
        <th></th>
        <th style="width:10px; heigh:auto"></th>
        <th>Title</th>
        <th style="width:10px; heigh:auto"></th>
        <th>Body</th>
        <th style="width:10px; heigh:auto"></th>
        <th></th>
        <th style="width:10px; heigh:auto"></th>
        <th colspan="3"></th>
     </tr>
   </thead>
   <tbody>
     <% @pins.each do |pin| %>
       <tr style="padding:10px 20px 25px 0">
         <td><%= link_to image_tag(pin.image, style:"width:60px; heigh:auto"), pin.image %></td> 
         <td style="width:60px; heigh:auto"></td>
         <td><%= pin.title %></td>
         <td style="width:30px; heigh:auto"></td>
         <td style="padding-top:10px; padding-right:0px; padding-bottom:20px; padding-left:0"><%= truncate(strip_tags(pin.body.to_s), length: 80) %></td>          <td style="width:30px; heigh:auto"></td>
         <td style="width:10px; heigh:auto"></td>
         <td><%= link_to 'Show', pin %></td>
         <td style="width:7px; heigh:auto"></td>
         <td><%= link_to 'Edit', edit_pin_path(pin) %></td>
       </tr>
     <% end %>
    </tbody>
  </table>
  <br>
</div>
<div class="container">
  <%= link_to 'New Pin', new_pin_path %>
</div>
