<div id="<%= dom_id pin %>">
  <p>
    <strong>Title:</strong>
    <%= pin.title %>
  </p>
  <%= pin.body %>
  <br />
  <% if pin.image.content_type.in?(%w[image/jpeg image/png image/jpg]) %>
    <%= link_to image_tag(pin.image),
      pin.image if
      pin.image.attached? %>
  <% end %>
  <hr />
  <% pin.pictures.each do |picture| %>
    <% picture %>
  <% end %>
  <% if pin.pictures.attached? %>
  <% pin.pictures.each do |picture| %>
    <%= link_to image_tag(picture,
     style:"width:150px, height:150px"), picture %>
  <% end %>
  <% end %>
</div>
