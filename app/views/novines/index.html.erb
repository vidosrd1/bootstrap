<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  <br />
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Novine</h1>
    <%= link_to 'New novine', new_novine_path, class: "rounded-lg
    py-3 px-5 bg-blue-600 1text-white block font-medium" %>
    <hr />
  </div>
  <table>
    <thead>
      <tr>
        <th></th>
        <th style="width:10px; heigh:auto"></th>
        <th>Title</th>
        <th style="width:10px; heigh:auto"></th>
        <th>Body</th>
        <th style="width:10px; heigh:auto"></th>
        <th colspan="3"></th>
     </tr>
   </thead>
   <tbody>
     <% @novines.each do |novine| %>
       <tr style="padding:10px 20px 25px 0">
         <td>
           <% if novine.image.attached? %>
             <%= link_to image_tag(novine.image,
             style:"width:60px; heigh:auto"), novine.image %>
           <% end %>
         </td>
         <td style="width:30px; heigh:auto"></td>
         <td><%= novine.title %></td>
         <td style="width:30px; heigh:auto"></td>
         <td style="padding-top:10px; padding-right:0px;
         padding-bottom:20px; padding-left:0">
         <%= truncate(strip_tags(novine.body.to_s), length: 80) %></td>          <td style="width:30px; heigh:auto"></td>
         <td style="width:10px; heigh:auto"></td>
         <td><%= link_to 'Show', novine %></td>
         <td style="width:7px; heigh:auto"></td>
         <td><%= link_to 'Edit', edit_novine_path(novine) %></td>
       </tr>
     <% end %>
    </tbody>
  </table>
  <hr />
  <div class="container">
    <%= link_to "New novina", new_novine_path %>
  </div>
  <br />
</div>
